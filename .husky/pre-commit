echo 'Styling, testing, and linting before committing'

# Prettier check
npm run prettier:check ||
(
    echo 'Prettier Check Failed. Run "npm run prettier:format". Add changes and try commit again.';
    false;
)

# Eslint check
npm run lint:check ||
(
    echo 'Eslint check failed. Fix problems issued above or run "npm run lint:fix". Add changes and try to commit again.';
    false;
)

# Typescript check
npm run types:check ||
(
    echo 'Typescript errors detected. Fix problems issued above, add changes and try to commit again.';
    false;
)

echo 'Code has been successfully tested. To lint project before committing run npm run lint-all. Committing project now.'