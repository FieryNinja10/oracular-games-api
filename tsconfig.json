{
  "compilerOptions": {
    // Enable latest features
    "lib": ["ESNext"],
    "target": "ESNext",
    "module": "ESNext",
    "moduleDetection": "force",
    "jsx": "react-jsx",
    "allowJs": true,

    // Bundler mode
    "moduleResolution": "Bundler",
    "allowImportingTsExtensions": true,
    "verbatimModuleSyntax": true,
    "noEmit": true,

    // Best practices
    "strict": true,
    "skipLibCheck": true,
    "noFallthroughCasesInSwitch": true,

    // Custom alias
    "baseUrl": "./",
    "paths": {
      "@db/*": ["./src/db/*"],
      "@lib/*": ["./src/lib/*"],
      "@auth/*": ["./src/lib/auth/*"]
    }
  },
  "exclude": ["node_modules", ".husky", "src/env.ts"]
}
